@model Employee
@{
    var photoPath = "~/images/" + (@Model.PhotoPath ?? "noimage.jpg");
    var showbutton = (bool)ViewData["showButton"];
}


<div class="card m-3" style="min-width: 18rem; max-width :20%;">
    <div class="card-hearder text-center">
        <h3>@Model.Name</h3>
    </div>

    <div class="text-center">
        <img class="" src="@photoPath"
             asp-append-version="true" style="width: auto; height: 200px;" />
    </div>

    @if(showbutton)
    {
        <div class="card-footer text-center">
            <a asp-page="/Members/Details" asp-route-ID="@Model.Id" class="btn btn-primary m-1">View</a>
        </div>
   
    }
</div>


        
